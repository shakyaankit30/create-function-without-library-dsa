#find absolute value (-ive to +ive)

--------------------Using PHP------------------

  function absoulte($num){
    return ($num < 0) ? -$num : $num;
  }

--------------------Using Java--------------------

  public class AbsoluteValue {
      public static double absolute(double number) {
           return (number < 0) ? -number : number;
      }
  
      public static void main(String[] args) {
          double number1 = -10;
          System.out.println("Absolute value of " + number1 + " is: " + absolute(number1));
      }
    }

--------------------Using Python--------------------

  def absolute(num)
      return -num if num < 0 else num

  number1 = -10
  print(f"Absolute value of {number1} is: {absolute(number1)}")

-------------------- Using C++ --------------------

  #include <iostream>

  double absolute(double num){
     return num < 0 ? -num : num;
  }

  int main(){
      double number1 = -10;
      cout << "Absolute value of " << number1 << " is: " << absolute(number1) << endl;
      return 0;
  }

-------------------- Using C --------------------

  #include <stdio.h>

  double absolute(double num){
     return num < 0 ? -num : num;
  }

  int main(){
      double number1 = -10;
      printf("Absolute value of %.2f is: %.2f\n", number1, absolute(number1));
      return 0;
  }
  
